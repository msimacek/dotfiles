[user]
        name = Michael Simacek
        email = msimacek@redhat.com
[branch]
        autosetuprebase = always
[fetch]
        prune = true
[color]
        ui = true
        status = auto
        branch = auto
[core]
        editor = vim -c 0
        excludesfile = /home/msimacek/.gitignore_global
[alias]
        ci = commit
        cia = commit --amend --no-edit
        pci = !pci
        st = status
        co = checkout
        lol = log --graph --decorate --pretty=oneline --abbrev-commit
        l = log --graph --decorate --pretty=oneline --abbrev-commit --branches --tags --remotes
        f = fetch
        fa = fetch --all
        nope = reset --hard
        pop = stash pop
        puf = push --force-with-lease
        pug = push origin HEAD:refs/for/develop
        ss = stash show -v
        m = mergetool
[format]
        pretty = fuller
[push]
	default = current
[init]
        ; templatedir = /home/msimacek/.git_template/
[sendemail]
        suppresscc = all
        confirm = always
        smtpserver = smtp.corp.redhat.com
        smtpserverport = 25
[mergetool "meld"]
    cmd = meld "$LOCAL" "$BASE" "$REMOTE" --output "$MERGED" --auto-merge
[merge]
    tool = meld
    conflictstyle = diff3
[diff]
    tool = meld
[difftool "meld"]
    cmd = meld "$REMOTE" "$LOCAL"
